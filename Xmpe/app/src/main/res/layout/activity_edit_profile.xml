<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.muvi.www.xmpe.activity.EditProfileActivity">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:id="@+id/profileImageLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >


            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_default_icon"
                />

        <ImageView
            android:id="@+id/editprofile"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/editprofile" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editChatName"
        android:layout_below="@+id/profileImageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7FFFFFFF"
        android:layout_centerHorizontal="true"
        android:drawablePadding="8dp"
        android:hint="Chat Name"
        android:padding="17dp"
        android:textColor="#7FFFFFFF"
        android:textColorHint="#7FFFFFFF"
        android:textSize="14dp" />

    <Button
        android:id="@+id/profileSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ll"
        android:layout_marginTop="20dp"
        android:text="Submit"
       android:background="@color/colorPrimary"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18dp" />
</RelativeLayout>
